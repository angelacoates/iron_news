<div class="page-header">

  <h1 Listing>Articles</h1>
</div>

<div class="table-responsive">
  <ul class="list-group">
    <% @stories.each_with_index do |story, index| %>
      <li class="list-group-item">
        <div class="media">
          <div class="media-left">
            <% if story.image_url %>
              <img class="media-object" src="<%= story.image_url %>" width="64" height="64">
            <% else %>
              <img src="https://deathpenaltyinfo.org/images/icon_newsletter.jpg" height= "64" width= "64">
            <% end %>
          </div>
          <div class="media-body">
            <h4 class="media-heading"><%= index + 1 %><%=link_to story.title, story.url %></h4>
            By: <%= story.user.email %>
                <%= story.created_at %>
                <%= link_to edit_story_path(story) do %>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <% end %>
          <%= link_to story, method: :delete, data: { confirm: 'Hey! Are you sure you want to delete this article??' } do %>
          <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
          <% end %>
        </div>
       </div>
      </li>
    <% end %>
  </ul>
</div>
